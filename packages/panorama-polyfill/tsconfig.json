{
    "include": ["**/*.ts"],
    "exclude": ["**/types/console.d.ts", "**/types/timers.d.ts"],
    "compilerOptions": {
        "rootDir": ".",
        "removeComments": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "types": ["@moddota/panorama-types"],
        "target": "ESNext",
        "lib": ["ESNext"]
    }
}
