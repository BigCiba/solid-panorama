{
    "include": ["packages/**/*.ts"],
    "compilerOptions": {
        "rootDir": "packages",
        "baseUrl": ".",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "types": ["@moddota/panorama-types", "@types/node"],
        "target": "ESNext",
        "lib": ["ESNext"]
    }
}
